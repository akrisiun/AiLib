<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:entity="clr-namespace:Ai.Wpf.Entity"
    >
    <!--<entity:ToolLine>-->
    <StackPanel x:Key="toolLine" 
                Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Stretch">
        <Button x:Name="cmdPaste" Margin="2" Padding="5,2,5,0" HorizontalAlignment="Center">Paste</Button>
        <Button x:Name="cmdExec" Margin="2" Padding="5,2,10,0" HorizontalAlignment="Center">Exec (F5)</Button>
        
        <TextBox x:Name="textCmd" Margin="5,2,0,0" Width="350">Command...</TextBox>
    </StackPanel>
</ResourceDictionary>